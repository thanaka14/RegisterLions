@model IEnumerable<RegisterLions.Models.ClubOfficer>

@{
    ViewBag.Title = "ประวัติการดำรงตำแหน่งรายบุคคล";
}

<div class="panel panel-primary">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        <div class="col-md-8">

        </div>
        @using (Html.BeginForm("DistrictOfficerHistory", "MyHistory", FormMethod.Post, new { name = "searchForm" }))
            {

            <div class="col-md-4">
                <div class="input-group">

                    @Html.DropDownList("member_seq", null, htmlAttributes: new { @class = "form-control pull-right", onChange = "document.searchForm.submit();" })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" name="submitButton" onclick="document.searchForm.submit();">
                            <i class="text-muted glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        }
        <table class="table table-striped table-bordered hover" cellspacing="0" width="100%" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.fiscal_year)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Officer.title)
                    </th>
                    <th>สังกัดสโมสร</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.fiscal_year)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Officer.title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Club.club_name_thai)
                        </td>



                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">&nbsp;</div>
</div>

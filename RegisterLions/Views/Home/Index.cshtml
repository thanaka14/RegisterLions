@{
    ViewBag.Title = "หน้าแรก";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}
<div class="panel panel-success">
    <div class="panel-heading">ผู้บริหารสโมสรไลออนส์สากล ภาค 310-เอ2 @ViewBag.fiscal_year</div>
    <div class="panel-body">
        <table class="table table-condensed">


            @foreach (var t in ViewBag.officer)
            {

                <tr>
                    <td align="center" width="50%">
                        <img src='@t.imgsrc1' style="max-width:100px; max-height:100px;" />
                        <br />@t.title1
                        <br />@t.name1

                    </td>

                    <td align="center" width="50%">
                        <img src='@t.imgsrc2' style="max-width:100px; max-height:100px;" />
                        <br />@t.title2
                        <br />@t.name2

                    </td>




                </tr>
            }





        </table>
        <div class="panel-footer"><h4>@Html.ActionLink("แสดงรายละเอียดรายชื่อกรรมการภาค", "DistrictOfficer", "MyDistrict") </h4></div>
    </div>
</div>

<div class="panel panel-warning">
    <div class="panel-heading">สถานะภาพของสโมสร @ViewBag.fiscal_year</div>
    <div class="panel-body">
        <table class="table table-condensed table-hover table-striped">
            <thead><tr><td>สถานะ</td><td>จำนวน</td></tr></thead>
            <tbody><tr><td>สโมสรใหม่</td><td>0</td></tr>
                <tr><td>Status Quo</td><td>1 @Html.ActionLink("ดูชื่อสโมสร", "ClubList", "MyDistrict", new { club_sts = 2 }, null)</td></tr>
                @*<tr><td>Status Quo</td><td>0</td></tr>*@
                <tr><td>Cannelled</td><td>1 @Html.ActionLink("ดูชื่อสโมสร", "ClubList", "MyDistrict", new { club_sts = 3 }, null)</td></tr>
                <tr><td>Pending</td><td>0</td></tr>
                <tr><td>Active</td><td>37 @Html.ActionLink("ดูชื่อสโมสร", "ClubList", "MyDistrict",  new { club_sts = 1 },null)</td></tr>
            </tbody>
            </table>
        </div>
    </div>
            <div class="panel panel-primary">
                <div class="panel-heading">สถิติความเคลื่อนไหวสมาชิก @ViewBag.fiscal_year</div>

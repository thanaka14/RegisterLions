                        <tr><td>@Html.ActionLink("สมาชิกเพิ่ม", "NewMember", "MyDistrict")</td><td>@ViewBag.newMember.ToString("#,##0") คน</td></tr>
                        <tr><td>@Html.ActionLink("สมาชิกพ้นสภาพ", "DroppedMember", "MyDistrict")</td><td>@ViewBag.dropMember.ToString("#,##0") คน</td></tr>
                        <tr><td>รวมทั้งสิ้น</td><td>@ViewBag.totMember.ToString("#,##0") คน</td></tr>
                        <tr><td>สมาชิกสุทธิ</td><td>@ViewBag.netMember.ToString("#,##0") คน </td></tr>
                    </table>

                </div>
                <div class="panel-footer"><h4>@Html.ActionLink("แสดงรายละเอียดความเคลื่อนไหวสมาชิก", "MemberReport", "MyDistrict") </h4></div>
            </div>



@model IEnumerable<RegisterLions.Models.Club>

@{
    ViewBag.Title = "ข้อมูลสโมสร";
}


<div class="panel panel-primary">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        <div class="col-md-6">
            <a class="btn btn-primary" href="@Url.Action("Create", "Clubs")"><i class="glyphicon glyphicon-file"></i> เพิ่ม</a>
        </div>
        @using (Html.BeginForm("Index", "Clubs", FormMethod.Post, new { name = "searchForm" }))
        {

            <div class="col-xs-10 col-lg-6 col-md-6">
                <div class="input-group">
                    <input type="text" id="searchString" name="searchString" class="form-control pull-right" placeholder="ค้นหา...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" name="submitButton" onclick="document.searchForm.submit();">
                            <i class="text-muted glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        }
        <table class="table table-bordered table-striped table-hover" id="myTable" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.club_id)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.club_name_thai)
                    </th>
                    

                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.District.district_name_thai)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.charter_date)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.ClubStatus.club_status_desc)
                    </th>



                    <th class="text-center">แก้ไข</th>
                    <th class="text-center">ลบ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.club_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.club_name_thai)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.District.district_name_thai)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.charter_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClubStatus.club_status_desc)
                        </td>

                        <td align="center">
                            <a class="btn btn-success" href="@Url.Action("Edit", "Clubs", new { id = item.club_id})">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            </td>
                        <td align="center">
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Clubs", new { id = item.club_id})">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">&nbsp;</div>
</div>

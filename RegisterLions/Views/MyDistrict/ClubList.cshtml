@model IEnumerable<RegisterLions.Models.Club>

@{
    ViewBag.Title = "รายชื่อสโมสรไลออนส์ ";
    var identity = (HttpContext.Current.User as RegisterLions.MyPrincipal).Identity as RegisterLions.MyIdentity;
}


<div class="panel panel-primary">
    <div class="panel-heading">@ViewBag.Title @identity.User.district_name_thai (@identity.User.district_id)</div>
    <div class="panel-body">
        <div class="col-md-6">
            
        </div>
        @using (Html.BeginForm("ClubList", "MyDistrict", FormMethod.Post, new { name = "searchForm" }))
        {

            <div class="col-md-offset-9">
                <div class="input-group">
                    
                    @Html.DropDownList("club_id", null, "ทุกสโมสร", htmlAttributes: new { @class = "form-control pull-right ", onChange = "document.searchForm.submit();" })
                    <span class="input-group-btn">
                        
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        }
        <table class="table table-bordered table-striped table-hover" id="myTable" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th align="center">
                        ข้อมูลสโมสรไลออนส์
                    </th>
                    
                   


                   
                   



                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        
                        <td>
                            <dl class="dl-horizontal">
                                <dt>สโมสรไลออนส์</dt>
                                <dd>@Html.DisplayFor(modelItem => item.club_name_thai) (@Html.DisplayFor(modelItem => item.club_id))</dd>
                                <dd>@Html.DisplayFor(modelItem => item.club_name_eng) </dd>
                                <dt>วันที่ก่อตั้ง</dt>
                                <dd>@Html.DisplayFor(modelItem => item.charter_date)</dd>
                                <dt>สถานที่ประชุม</dt>
                                <dd>@Html.DisplayFor(modelItem => item.meeting_place)</dd>
                                <dt>
                                    @Html.DisplayFor(modelItem => item.ClubStatus.club_status_desc)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(modelItem => item.ClubStatus.club_status_desc)
                                </dd>
                            </dl>
                                
</td>

                        



                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">&nbsp;</div>
</div>

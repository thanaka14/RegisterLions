@model RegisterLions.Models.ClubStatus

@{
    ViewBag.Title = "แก้ไขสถานะสโมสร";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.club_sts)

                <div class="form-group">
                    @Html.LabelFor(model => model.club_status_desc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.club_status_desc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.club_status_desc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button id="submitButton" name="submitButton" class="btn btn-primary">
                            <i class="glyphicon glyphicon-thumbs-up"></i> จัดเก็บ
                        </button>
                        <a class="btn btn-warning" href="@Url.Action("Index", "ClubStatus")"><i class="glyphicon glyphicon-thumbs-down"></i> ยกเลิก</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">&nbsp;</div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


